{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ChackNorriesConnector": {
    "ApiHost": "api.chucknorris.io"
  },
  "ReplacementTransformation": {
    "ReplaceRules": [
      {
        "OldValue": "Chuck",
        "NewValue": "CH."
      },
      {
        "OldValue": "unwantedWordToReplace",
        "NewValue": "***"
      }
    ]
  },
  "BadWordsFilter": {
    "BadWords": [ "unwantedWordToRemoveJoke" ]
  }
}
